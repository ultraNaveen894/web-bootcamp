<% layout('layout/boilerPlate') %> 

<div class="row">
<h1 class="text-center">edit campgrounds</h1>
<div class="col-6 offset-3">
    <form action="/campgrounds/<%=campgrounds._id%>?_method=PUT" method="post" class="validated-form" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label" for="name">title</label>
            <input class="form-control" type="text" placeholder="enter title" id="name" name="title" value="<%= campgrounds.title %> " required>
            <div class="valid-feedback">
                Looks good!
              </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="location">location</label>
            <input class="form-control" type="text" placeholder="enter location" id="location" name="location"value="<%= campgrounds.location %> " required>
            <div class="valid-feedback">
                Looks good!
              </div>
        </div>
        <div class="custom-file mb-3">
            <label class="custom-file-label" for="inputGroupFile04">
              <span class="d-inline-block text-truncate w-75"></span>
            </label>
            <input id="inputGroupFile04" type="file" multiple class="custom-file-input" name="image" multiple>
          </div>
          <div class="mb-3">
            <% campgrounds.images.forEach((e,i)=>{ %> 

              <img src="<%= e.thumbnail %> " alt="" class="img-thumbnail" >
              <div class="form-check-inline">
                <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%=e.filename  %> " >
              </div>
              <label for="image-<%= i %> ">delete</label>
              <% }) %> 
          </div>
        <div class="mb-3">
            <label for="price">price</label>
            <div class="input-group mb-3">
                <span class="input-group-text">$</span>
                <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" name="price" placeholder="0.00" id="price" value="<%= campgrounds.price %> " required multiple>
                <div class="valid-feedback">
                    Looks good!
                  </div>
                <span class="input-group-text">.00</span>
              </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="description">description</label>
            <textarea class="form-control" type="text" placeholder="enter description" id="description" name="description" required><%= campgrounds.description %> "</textarea>
            <div class="valid-feedback">
                Looks good!
              </div>
        </div>
        <div class="mb-3">
            <button class="btn-success">submit</button>
        </div>
    </form>
    <a href="/campgrounds">back to campgrounds</a>
</div>
</div>
<a href="/campgrounds/<%= campgrounds._id%> ">back to campgrounds</a>
