<% layout('layout/boilerPlate') %> 
  <h1>all campgrounds</h1>  
  <ul>
      <% for(let e of campgrounds){ %> 
       <div class="card">
         <div class="row">
           <div class="col-md-4">
             <img src="<%= e.image %> " alt="" class="img-fluid">
           </div>
           <div class="col-md-8">
             <h5 class="card-title"><%= e.title %> </h5>
             <p class="card-text"><%=e.description%></p>
             <p class="card-text">
               <small class="text-muted"><%= e.location %> </small>
             </p>
             <a class="btn btn-primary" href="campgrounds/<%= e._id %> ">view</a>
           </div>
         </div>
       </div>
        <% } %> 
  </ul>
