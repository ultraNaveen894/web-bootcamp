<% layout('layout/boilerPlate') %> 
<div id="map" style="width: 100%;height: 500px;margin-top: 40px;" ></div>
  <h1>all campgrounds</h1>  
  <ul>
      <% for(let e of campgrounds){ %> 
       <div class="card mt-3">
         <div class="row">
           <%  %> 
           <div class="col-md-4">
             <img src="<%= e.images.length?e.images[0].url:'https://thumbs.dreamstime.com/b/beautiful-rain-forest-ang-ka-nature-trail-doi-inthanon-national-park-thailand-36703721.jpg'%> " alt="" class="img-fluid">
           </div>
           <div class="col-md-8">
             <h5 class="card-title"><%= e.title %> </h5>
             <p class="card-text"><%=e.description%></p>
             <p class="card-text"><%=e.price%>$</p>
             <p class="card-text">
               <small class="text-muted"><%= e.location %> </small>
             </p>
             <a class="btn btn-primary" href="campgrounds/<%= e._id %> ">view</a>
           </div>
         </div>
       </div>
        <% } %> 
  </ul>
  <script>
    const token='<%-process.env.MAP_BOX_TOKEN %>'
    const campgrounds= {features:<%-JSON.stringify(campgrounds) %> }
     </script>
  <script src="/javaScript/clusterMap.js"></script>